{
    "version": 3,
    "configurePresets": [
        {
            "name": "g++-ninja-release",
            "inherits": "default-ninja-release",
            "description": "Release ninja build with g++ compiler",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG"
            }
        },
        {
            "name": "g++-ninja-debug",
            "inherits": "default-ninja-debug",
            "description": "Debug ninja build with g++ compiler",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_DEBUG": "-Wall -Wextra -Werror -pedantic"
            }
        }
    ]
}